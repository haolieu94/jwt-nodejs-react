<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List User</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div>

    </div>
    <div class="container">
        <div class="row">
            <div class="user-info-container">
                <form method="POST" action="/users/create-user">
                    
                            <div class="mt-3">
                                <h3>Create A New User</h3>
                            </div>
                            <div class="mt-3 col-6">
                                <label for="mail">Email address</label>
                                <input type="email" class="form-control" id="mail" name="email" required>
                            </div>
                            <div></div>
                            <div class="mb-3 col-6">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>
                            <div></div>
                            <div class="mb-3 col-6">
                                <label for="username">User name</label>
                                <input type="user" class="form-control" id="username" name="username" required>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        
                    
                </form>
            </div>
            <div class="table-users mt-3">
                <h3>Table User</h3>
                <table class="table table-hover table-bordered mt-3">
                        <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Email</th>
                            <th scope="col">Username</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% userList.forEach(function(item,index){ %>
                                <tr>
                                    <th scope="row"><%= item.id %></th>
                                    <td><%= item.email%></td>
                                    <td><%= item.username%></td>
                                    <td>
                                        <a class="btn btn-warning" href="/update-user/<%=item.id%>" >
                                            
                                                Edit
                        
                                        </a>
                                        
                                        <form style="display: inline;" action="/delete-user/<%=item.id%>" method="post">
                                        <button class="btn btn-danger" type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                      
                        
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>